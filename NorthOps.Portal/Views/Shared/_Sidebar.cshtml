@using NorthOps.Portal.Controllers


<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel
        <div class="user-panel">
            <div class="pull-left image">
                <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Alexander Pierce</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>-->
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            @if (User.IsInRole("Applicant"))
            {
                <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("home") ? "active" : "")">
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> <span>Dash Board</span></a>
                </li>
            }

            @if (User.IsInRole("Employee"))
            {
                <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("dailytimerecord") ? "active" : "")">
                    <a href="@Url.Action("index", "break")"><i class="fa fa-calendar"></i> <span>Break Monitoring</span></a>
                </li>
                <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("dailytimerecord") ? "active" : "")">
                    <a href="@Url.Action("index", "dailytimerecord")"><i class="fa fa-calendar"></i> <span>Daily Time Record</span></a>
                </li>
                <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("restdays") ? "active" : "")">
                    <a href="@Url.Action("index", "restdays")"><i class="fa fa-calendar-times-o"></i> <span>Rest Days</span></a>
                </li>
                <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("recording") ? "active" : "")">
                    <a href="@Url.Action("Index", "recording")"><i class="fa fa-music"></i> <span>Coaching Logs</span></a>
                </li>
                <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("violations") ? "active" : "")">
                    <a href="@Url.Action("Index", "violations")"><i class="fa fa-minus-square"></i> <span>Violation Logs</span></a>
                </li>
                <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("documents") ? "active" : "")">
                    <a href="@Url.Action("index", "documents")"><i class="fa fa-file-archive-o"></i> <span>Documents</span></a>
                </li>
                <li class="@(ControllerServices.IsMenuBarActive("index","ot")? "active" : "")">
                    <a href="@Url.Action("index", "ot")"><i class="fa fa-clock-o"></i> <span> Over Time</span></a>
                </li>
                <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("schedules") ? "active" : "")">
                    <a href="@Url.Action("index", "schedules")"><i class="fa fa-calendar-times-o"></i> <span>Schedules</span></a>
                </li>
                <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("attendance") ? "active" : "")">
                    <a href="@Url.Action("index", "attendance")"><i class="fa fa-calendar-times-o"></i> <span>Raw Attendance</span></a>
                </li>

            }

            <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("member") ? "active" : "")">
                <a href="@Url.Action("profile", "member")"><i class="fa fa-user-o"></i> <span>Profile</span></a>
            </li>
            @{

                var userId = User.Identity.GetUserId();
                if (new UnitOfWork().Applicant.Get(filter: m => m.UserId == userId && (m.IsTaken == null || m.IsTaken == false)).Count() > 0)
                {
                    <li class="@(ControllerServices.IsActionName("index") && ControllerServices.IsControllerName("ApplicantExam") ? "active" : "")">
                        <a href="@Url.Action("index", "applicantexam")"><i class="fa fa-puzzle-piece"></i> <span>Exam</span></a>
                    </li>
                }
            }




        </ul>
    </section>
    <!-- /.sidebar -->
</aside>

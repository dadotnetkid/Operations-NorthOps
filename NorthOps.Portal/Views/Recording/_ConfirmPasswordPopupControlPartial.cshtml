@model Recordings


@Html.DevExpress().PopupControl(settings => {
    settings.Name = "ConfirmPopupControl";
                                                settings.HeaderText = "Confirm";
                                                settings.PopupHorizontalAlign = PopupHorizontalAlign.WindowCenter;
                                                settings.Width = Unit.Pixel(500);
    settings.AllowResize = true;
    settings.ShowHeader = true;
    settings.ShowOnPageLoad = false;
    settings.AllowDragging = true;
    settings.CloseAction = CloseAction.CloseButton;
    settings.CloseOnEscape = false;
    settings.Modal = true;
    settings.CallbackRouteValues = new {Controller = "Recordings",Action= "ConfirmPasswordPopupControlPartial" };
    settings.ShowOnPageLoad = false;
    settings.SetContent(() =>
    {
        Html.RenderPartial("_ConfirmPasswordPopupControlPartialContent", Model );
    });
}).GetHtml()

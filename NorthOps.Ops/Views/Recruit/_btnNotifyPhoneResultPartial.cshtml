@model JobApplications
@if (Model.PhoneInterviewDate != null)
{
    if (Model.IsPhoneInterviewPassed == null)
    {

        using (Ajax.BeginForm(actionName: "btnNotifyPhoneResultPartial", controllerName: "recruit", routeValues: null, ajaxOptions: new AjaxOptions() { UpdateTargetId = "form-btnNotifyPhoneResultPartial" }, htmlAttributes: new { id = "form-btnNotifyPhoneResultPartial" }))
        {

            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnbtnNotifyPhoneResultPassed";
                settings.UseSubmitBehavior = true;
                settings.RouteValues = new { Action = "btnNotifyPhoneResultPartial", Controller = "Recruit", UserId = Model.UserId, IsPassed = true };
                settings.Text = "Passed";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnbtnNotifyPhoneResultFailed";
                settings.UseSubmitBehavior = true;
                settings.RouteValues = new { Action = "btnNotifyPhoneResultPartial", Controller = "Recruit", UserId = Model.UserId, IsPassed = false };
                settings.Text = "Failed";
            }).GetHtml();
        }
    }

}

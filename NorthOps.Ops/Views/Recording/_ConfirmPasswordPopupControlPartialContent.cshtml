@model Recordings

<div class="row">
    <div class="col-lg-12">
        <label>Password</label>
        @Html.DevExpress().TextBoxFor(m => m.AcknowledgeTokenViewModel.Password, settings =>
        {
            settings.Properties.ClientSideEvents.KeyUp = "function(s,e){checkPassword(s.GetValue())}";
            settings.Properties.NullText = "Password";
            settings.Width = Unit.Percentage(100);
        }).GetHtml()
    </div>
</div>


<div class="row margin-top-10">
    <div class="col-lg-12">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnConfirm";
                settings.Text = "Confirm";
                settings.ClientSideEvents.Click = "function(s,e){RecordingGridView.UpdateEdit()}";
                settings.ClientEnabled = false;
            }).GetHtml();



            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel" + Model.Id;
                settings.Text = "Cancel";
                settings.ClientSideEvents.Click = "function(s,e){ConfirmPopupControl.Hide()}";
            }).GetHtml();
        }
    </div>
</div>


@model Holidays
<div class="row margin-top-5">
    <div class="col-lg-12">
@{
    Html.DevExpress().Button(settings =>
    {
        settings.Name = "btnUpdate";
        settings.Text = "Update";
        settings.ClientSideEvents.Click = "function(s,e){HolidayGridView.UpdateEdit()}";
        settings.ControlStyle.CssClass = "margin-r-5";
    }).GetHtml();
    Html.DevExpress().Button(settings =>
    {  
        settings.Name = "btnCancel";
        settings.Text = "Cancel";
        settings.ClientSideEvents.Click = "function(s,e){HolidayGridView.CancelEdit()}";
    }).GetHtml();
}
    </div>
</div>
<div class="row margin-top-5 ">
    <div class="col-lg-4">
        @{
            Html.DevExpress().TextBoxFor(m => m.Holiday, settings =>
            {
                settings.Width = Unit.Percentage(100);
            }).GetHtml();

        }
    </div>
    <div class="col-lg-4">
        @{
            Html.DevExpress().DateEditFor(m => m.HolidayDate, settings =>
            {
                settings.Width = Unit.Percentage(100);
            }).GetHtml();

        }
    </div>
    <div class="col-lg-4">
        @{
            Html.DevExpress().ComboBoxFor(m => m.Type, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.TextField = "Name";
                settings.Properties.ValueField = "Id";
            }).BindList(Enum.GetValues(typeof(HolidayType)).Cast<HolidayType>().Select(x => new { Id = (int)x, Name = x.ToString() })).GetHtml();

        }
    </div>
</div>

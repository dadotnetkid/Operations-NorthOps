@model NotificationsTemplates
<div class="row">
    <div class="col-lg-4">
        @{
            Html.DevExpress().ComboBoxFor(m=>m.Type, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.ValueField = "Id";
                settings.Properties.TextField = "Name";
                settings.Properties.Caption = "Type";
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
                }).BindList(Enum.GetValues(typeof(NotificationType)).Cast<NotificationType>().Select(x => new { Id = x, Name = x.ToString() })).GetHtml();
        }
    </div>
    <div class="col-lg-4">
        @{
            Html.DevExpress().TextBoxFor(m => m.Template, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Template";
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
            }).GetHtml();
        }
    </div>
    <div class="col-lg-4">
        @{
            Html.DevExpress().CheckBoxFor(m => m.isActive, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "is Active";
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
            }).GetHtml();
        }
    </div>

</div>
<div class="row margin-top-10 ">
    <div class="col-lg-12">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSave";
                settings.Text = "Save";

                settings.ClientSideEvents.Click = "function(s,e){NotificationsTemplatesGridView.UpdateEdit()}";
                settings.ControlStyle.CssClass = "margin-r-5";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ClientSideEvents.Click = "function(s,e){NotificationsTemplatesGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>
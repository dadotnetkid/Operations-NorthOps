@{
    Html.DevExpress().ComboBox(cbo =>
    {
        cbo.Width = Unit.Percentage(100);
        cbo.Properties.Caption = "Employee";
        cbo.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
        cbo.Name = "UserId";
        cbo.Properties.CallbackPageSize = 10;
        cbo.CallbackRouteValues = new { Controller = "Leaves", Action = "cboEmployeePartial" };
        cbo.Properties.ValueField = "Id";
        cbo.Properties.TextField = "FullName";

    }).BindList(Model).Bind(ViewBag.UserId).GetHtml();

}


